<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AuthActivity">


    <TextView
        android:id="@+id/text_view_qr"
        android:layout_width="325dp"
        android:layout_height="20dp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="USER LOGIN"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/second3"/>

    <EditText
        android:id="@+id/auth_login_et_qr"
        android:layout_width="327dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_qr"
        android:textColor="#FFFFFF"
        android:background="@drawable/neww"/>


    <TextView
        android:id="@+id/text_view_2_qr"
        android:layout_width="325dp"
        android:layout_height="20dp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/auth_login_et_qr"
        android:text="USER PASSWORD"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/second3"/>

    <EditText
        android:id="@+id/auth_password_et_qr"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="7sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_2_qr"
        android:textColor="#FFFFFF"
        android:background="@drawable/neww"/>


    <ImageView
        android:id="@+id/image_view_qr"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/auth_password_et_qr" />

    <Button
        android:id="@+id/generate_gr"
        android:layout_width="327dp"
        android:layout_height="40dp"
        android:layout_marginStart="18sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/sing_in_qr"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Generate QRcode"
        android:textAllCaps="false"
        android:textColor="#05092B"
        android:background="@drawable/second"
        />


    <Button
        android:id="@+id/sing_in_qr"
        android:layout_width="327dp"
        android:layout_height="40dp"
        android:layout_marginStart="18sp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/second"
        android:textAllCaps="false"
        android:text="Sign in"
        android:textSize="18dp"
        android:textColor="#05092B"

        />


</androidx.constraintlayout.widget.ConstraintLayout>